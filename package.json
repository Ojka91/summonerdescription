{
  "name": "lolmary",
  "engines": {
    "node": "20"
  },
  "version": "1.0.0",
  "description": "LoLmary, the summoner summary",
  "main": "dist/app.js",
  "scripts": {
    "docker:build": "docker build -t element-backend .",
    "docker:run": "npm run docker:build && docker run --env-file='.env-dev' -p 3000:3000 element-backend",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "jest --coverage",
    "html": "copyfiles --up 1 src/public/*.html src/public/styles/*.css src/public/scripts/*.js dist",
    "riot": "copyfiles riot.txt dist",
    "start": "npm run build && npm run html && npm run riot && dotenv -e .env -- node dist/app.js",
    "dev": "nodemon src/app.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express-pino-logger": "^4.0.3",
    "axios": "^1.3.5",
    "body-parser": "1.20.1",
    "copyfiles": "^2.4.1",
    "cors": "2.8.5",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "openai": "^3.2.1",
    "pino": "^8.7.0",
    "pino-http": "^8.2.1",
    "redis": "4.0.1",
    "ts-data-class": "^0.9.1",
    "tsconfig-paths": "^3.14.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.7",
    "@types/express": "4.17.7",
    "@types/jest": "27.5.1",
    "@types/node": "14.0.27",
    "@types/uuid": "^8.3.4",
    "concurrently": "5.3.0",
    "jest": "28.1.0",
    "nodemon": "^2.0.4",
    "ts-jest": "28.0.2",
    "ts-node": "8.10.2",
    "tsc-alias": "^1.7.1",
    "typescript": "4.6.2"
  }
}
